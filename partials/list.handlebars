<div id="list-{{this.listId}}">
  <div class="w-[17rem] bg-gray-200 rounded-lg p-2 flex flex-col gap-2">
    <div
      class="pl-2 font-bold cursor-pointer flex justify-between items-center"
    >
      {{>listHeader}}
      <div>
        <img src="assets/trash.svg" title="Delete List" alt="delete icon" class="w-5 h-5" hx-confirm="Are you sure?" hx-delete="/lists/{{this.listId}}" hx-target="#list-{{this.listId}}" hx-swap="delete" />
      </div>
    </div>
      <div class="flex flex-col gap-2 sort-card" id="sort-list-{{this.listId}}">
      {{#each this.cards}}
      {{>cardItem}}
      {{/each}}
  </div>
  {{>addNewCard}}
  </div>
</div>