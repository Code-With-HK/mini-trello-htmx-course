<form
  hx-post="/lists/{{this.listId}}/cards"
  hx-select="#addNewCard"
  hx-swap="outerHTML"
  class="p-2 flex flex-col"
  hx-select-oob="#sort-list-{{this.listId}}:beforeend"
  id="newCardForm-{{this.listId}}"
>
  <input
    class="p-2 rounded-md shadow-lg placeholder:text-zinc-700"
    type="text"
    name="name"
    placeholder="Enter a title for this card..."
    autofocus
  />
  <div class="flex items-center gap-2 mt-2">
    <button
      class="bg-blue-600 rounded-md text-white py-1 px-3 transition-all hover:bg-blue-800"
      type="submit"
    >Add Card</button>
    <img
      hx-get="lists/{{this.listId}}/add-new-card"
      hx-swap="outerHTML"
      hx-target="#newCardForm-{{this.listId}}"
      class="w-8 h-8 cursor-pointer"
      src="assets/cross.svg"
      alt="close icon"
      title="Close Add Card"
    />
  </div>
</form>