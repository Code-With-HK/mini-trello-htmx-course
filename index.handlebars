<header class="p-4 bg-[#005C91] border-b-2 border-y-transparent shadow-md">
  <h1 class="text-3xl text-white font-bold uppercase text-center">Mini Trello</h1>
</header>
<form hx-post="/lists/move" id="listMove" hx-trigger="listSubmit" hx-swap="none">
  <input id="fromPosition" name="fromPosition" type="hidden" />
  <input id="toPosition" name="toPosition" type="hidden" />
</form>
<form hx-post="/cards/move" id="cardMove" hx-trigger="cardSubmit" hx-swap="none">
  <input id="fromPosition" name="fromPosition" type="hidden" />
  <input id="toPosition" name="toPosition" type="hidden" />
  <input id="fromList" name="fromList" type="hidden" />
  <input id="toList" name="toList" type="hidden" />
</form>
<section id="board" class="m-4 flex gap-4">
  <div class="flex gap-4 sort-list" id="sortableList">
    {{#each lists}}
    {{>list}}
    {{/each}}
  </div>
  {{>addNewList}}
</section>