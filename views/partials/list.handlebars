<div id="list-{{this.listId}}">
  <div class="w-[17rem] bg-gray-200 rounded-lg p-2 flex flex-col gap-2">
    <div
      class="pl-2 font-bold cursor-pointer flex justify-between items-center"
    >
      <div
        hx-get="/lists/edit/{{this.listId}}"
        hx-swap="outerHTML"
      >{{this.name}}</div>
      <div>
        <img
          hx-delete="/lists/{{this.listId}}"
          hx-target="#list-{{this.listId}}"
          hx-swap="delete"
          hx-confirm="Are you sure?"
          src="assets/trash.svg"
          class="w-5 h-5"
          title="Delete List"
          alt="delete icon"
        />
      </div>
    </div>
    <div class="flex flex-col gap-2 sort-card" id="sort-list-{{this.listId}}">
    {{#if this.cards}}
      {{#each this.cards}}
      {{>cardItem}}
      {{/each}}
    {{/if}}
    </div>
    {{>addNewCard}}
  </div>
</div>